<div class="row mt-2 mx-1">
  <div class="col-12">
    <% flash.each do |type, msg| %>
      <%= content_tag :div,
                      class: "alert #{bootstrap_class_for_flash(type)} alert-dismissible fade show",
                      data: {
                        controller: 'tds-common-lib-backend--flash',
                        tds_common_lib_backend__flash_flash_type_value: type
                      } do
      %>
        <%= msg %>
        <%= content_tag :button,
                        class: 'btn-close',
                        aria: {
                          label: 'close'
                        },
                        data: {
                          action: 'click->tds-common-lib-backend--flash#dismiss'
                        } do
        %><% end %>
      <% end %>
    <% end %>
  </div>
</div>
