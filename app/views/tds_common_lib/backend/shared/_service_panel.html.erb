<div class="service-panel collapse js-service-panel">
  <div class="service-panel-toggle-close js-service-panel-toggle" data-toggle="collapse" data-target=".js-service-panel">
    <span class="material-icons">close</span>
  </div>
  <div class="service-panel-body js-service-panel-body">
    <ul class="nav service-panel-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab"
           aria-controls="pills-home" aria-selected="true"><span class="material-icons"><%= content_for?(:service_panel_first_tab_icon) ? yield(:service_panel_first_tab_icon) : 'filter_alt' %></span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#chat" role="tab"
           aria-controls="chat" aria-selected="false"><span class="material-icons">save</span></a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <!-- Tab 1 -->
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <%= yield(:service_panel_first_tab) %>
      </div>
      <!-- End Tab 1 -->
      <!-- Tab 2 -->
      <div class="tab-pane fade" id="chat" role="tabpanel" aria-labelledby="pills-profile-tab">
        <ul class="mailbox list-style-none mt-3">
          <li>
          </li>
        </ul>
      </div>
      <!-- End Tab 2 -->
      <!-- Tab 3 -->
      <div class="tab-pane fade p-3" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
        <h6 class="mt-3 mb-3">Activity Timeline</h6>
      </div>
      <!-- End Tab 3 -->
    </div>
  </div>
</div>
<div class="service-panel-toggle js-service-panel-toggle" data-toggle="collapse" data-target=".js-service-panel">
  <span class="material-icons">settings</span>
</div>