<div class="mb-2 text-right">
  <%= button_tag(
        type: :button,
        class: 'btn btn-sm btn-outline-secondary',
        aria: {
          controls: 'js-service-panel',
          expanded: false
        },
        data: {
          target: '#js-service-panel',
          toggle: 'collapse'
        }
      ) do
  %>
    <%= yield(:service_panel_open_button) %>
  <% end %>
</div>

<div id="js-service-panel" class="service-panel mb-2 collapse">
  <div class="card card-body">
    <div class="text-right">
      <%= button_tag(
            type: :button,
            class: 'btn btn-sm btn-outline-secondary',
            aria: {
              controls: 'js-service-panel',
              expanded: false
            },
            data: {
              target: '#js-service-panel',
              toggle: 'collapse'
            }
          ) do
      %>
        <span class="material-icons">close</span>
      <% end %>
    </div>
    <div class="service-panel-body">
      <% if content_for?(:service_panel_tab_2_title) %>
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <%= link_to "#tab-1", class: 'nav-link active', data: { toggle: 'pill' }, aria: { controls: 'tab-1', selected: true } do %>
              <%= yield(:service_panel_tab_1_title) %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "#tab-2", class: 'nav-link', data: { toggle: 'pill' }, aria: { controls: 'tab-2', selected: false } do %>
              <%= yield(:service_panel_tab_2_title) %>
            <% end %>
          </li>
          <% if content_for?(:service_panel_tab_3_title) %>
            <li class="nav-item">
              <%= link_to "#tab-3", class: 'nav-link', data: { toggle: 'pill' }, aria: { controls: 'tab-3', selected: false } do %>
                <%= yield(:service_panel_tab_3_title) %>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% end %>
      <div class="tab-content mt-3" id="pills-tabContent">
        <div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="tab-1-tab">
          <%= yield(:service_panel_tab_1) %>
        </div>
        <% if content_for?(:service_panel_tab_2) %>
          <div class="tab-pane fade show active" id="tab-2" role="tabpanel" aria-labelledby="tab-2-tab">
            <%= yield(:service_panel_tab_2) %>
          </div>
        <% end %>
        <% if content_for?(:service_panel_tab_3) %>
          <div class="tab-pane fade show active" id="tab-3" role="tabpanel" aria-labelledby="tab-3-tab">
            <%= yield(:service_panel_tab_3) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
