<div class="container">
  <% flash.each do |type, msg| %>
    <div class="alert <%= bootstrap_class_for_flash(type) %> alert-dismissable fade show js-flash-<%= type %>">
      <%= msg %>
      <button class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span></button>
    </div>
  <% end %>
</div>
